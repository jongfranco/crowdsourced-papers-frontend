<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
  <%= form_with scope: :paper, local: true do |f| %>
    <div>
      <div>
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Submit new paper
          </h3>
          <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
            This information will be displayed publicly.
          </p>
        </div>

        <% if @paper.errors.any? %>
        <div id="error_explanation" class="mt-8 border-red-500 p-2 border-2">
          <h2>
            <%= pluralize(@paper.errors.count, "error") %> prohibited
            this paper from being saved:
          </h2>
          <ul class="list-disc list-inside m-1">
            <% @paper.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <%= render partial: 'paper_form', locals: { f: f } %>
      </div>
    </div>
    <div class="mt-8 border-t border-gray-200 pt-5">
      <div class="flex justify-end">
        <span class="ml-3 inline-flex rounded-md shadow-sm">
          <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition duration-150 ease-in-out">
            Submit paper
          </button>
        </span>
      </div>
    </div>
  <% end %>
</div>
</div>
